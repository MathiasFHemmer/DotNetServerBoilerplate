{
  "$schema": "http://json.schemastore.org/template",
  "author": "Mathias Hemmer",
  "classifications": [ "Web", "API" ],
  "identity": "MHemmer.Boilerplate",
  "name": "MHemmer Boilerplate API",
  "shortName": "mhemmer-api",
  "sourceName": "Boilerplate",
  "preferNameDirectory": true,
  "symbols": {
    "ProjectName": {
      "type": "parameter",
      "datatype": "string",
      "defaultValue": "MyProject",
      "replaces": "Boilerplate"
    },
    "ProjectNameLower": {
      "type": "generated",
      "generator": "casing",
      "replaces": "boilerplate",
      "parameters": {
        "source": "ProjectName",
        "toLower": true
      }
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "exclude": 
          [
            "**/.git/**"
          ]
        }
      ]
    }
  ]
}
